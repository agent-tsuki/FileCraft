# =============================================================================
# DOCKER ENVIRONMENT VARIABLES (LOCAL DEVELOPMENT)
# =============================================================================

# ===== API Configuration =====
PROJECT_NAME=FileCraft
PROJECT_DESCRIPTION=Professional file conversion and processing API
VERSION=1.2.0
API_V1_PREFIX=/api/v1
DEBUG=true

# ===== Server Configuration =====
HOST=0.0.0.0
PORT=8000
WORKERS=2
RELOAD=false
LOG_LEVEL=info

# ===== Security Configuration =====
SECRET_KEY=local-docker-secret-key-change-in-production
JWT_SECRET_KEY=local-docker-jwt-secret-key-change-in-production

# ===== CORS Configuration =====
CORS_ORIGINS=["http://localhost:8000", "http://127.0.0.1:8000", "http://localhost:3000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# ===== Database Configuration (Docker) =====
DATABASE_URL=postgresql://postgres:password@db:5432/filecraft
DB_HOSTNAME=db
DB_PORT=5432
DB_DATABASE=filecraft
DB_USER=postgres
DB_PASSWORD=password

# ===== Redis Configuration (Docker) =====
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ===== Celery Configuration (Docker) =====
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ===== File Upload Configuration =====
MAX_UPLOAD_SIZE=209715200         # 200MB
MAX_IMAGE_SIZE_MB=50
MAX_AUDIO_SIZE_MB=100
MAX_VIDEO_SIZE_MB=200

# ===== Processing Configuration =====
ENABLE_ASYNC_PROCESSING=true
MAX_CONCURRENT_TASKS=4
TASK_TIMEOUT=600
IMAGE_QUALITY_DEFAULT=85

# ===== External Services (Disabled for local Docker) =====
ENABLE_S3_STORAGE=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_WEBHOOKS=false

# ===== Environment =====
ENVIRONMENT=development