# ===== LOCAL DEVELOPMENT ENVIRONMENT =====
# Simple configuration for running FileCraft locally

# ===== API Configuration =====
PROJECT_NAME=FileCraft
PROJECT_DESCRIPTION=Professional file conversion and processing API
VERSION=1.2.0
API_V1_PREFIX=/api/v1
DEBUG=true

# ===== Server Configuration =====
HOST=127.0.0.1
PORT=8000
WORKERS=1
RELOAD=true
LOG_LEVEL=info

# ===== Security Configuration =====
SECRET_KEY=local-dev-secret-key-not-for-production
JWT_SECRET_KEY=local-jwt-secret-key-not-for-production

# ===== CORS Configuration =====
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:8080", "http://127.0.0.1:8080"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# ===== File Upload Configuration =====
MAX_UPLOAD_SIZE=104857600         # 100MB
MAX_IMAGE_SIZE_MB=20
MAX_AUDIO_SIZE_MB=50
MAX_VIDEO_SIZE_MB=100

# ===== Processing Configuration =====
ENABLE_ASYNC_PROCESSING=false     # Simplified for local development
MAX_CONCURRENT_TASKS=2
IMAGE_QUALITY_DEFAULT=85

# ===== All External Services Disabled =====
DATABASE_URL=
REDIS_URL=
CELERY_BROKER_URL=
CELERY_RESULT_BACKEND=
ENABLE_S3_STORAGE=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_WEBHOOKS=false

# ===== Environment =====
ENVIRONMENT=development