# ===== FileCraft Environment Configuration =====
# Copy this file to .env and update the values according to your environment

# ===== API Configuration =====
PROJECT_NAME=FileCraft
PROJECT_DESCRIPTION=Professional file conversion and processing API with advanced encoding/decoding capabilities
VERSION=1.2.0
API_V1_PREFIX=/api/v1
DEBUG=false

# ===== Documentation Configuration =====
DOCS=/docs
REDOC_URL=/redoc
OPENAPI_URL=/api/openapi.json
ENABLE_DOCS=true
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
ENABLE_OPENAPI=true

# ===== Server Configuration =====
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false
LOG_LEVEL=info

# ===== Security Configuration =====
# IMPORTANT: Change these in production!
SECRET_KEY=your-super-secret-key-change-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# JWT Configuration (Authentication not implemented)
JWT_SECRET_KEY=jwt-secret-key-change-in-production-please
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# API Key configuration (Authentication not implemented)
API_KEY_NAME=X-API-Key
API_KEY_HEADER=X-API-Key
ENABLE_API_KEY_AUTH=false

# ===== CORS Configuration =====
# Use specific origins in production instead of "*"
ALLOWED_HOSTS=["*"]
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true

# ===== Rate Limiting =====
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_PER_IP=1000

# ===== File Upload Configuration =====
MAX_UPLOAD_SIZE=524288000
MAX_IMAGE_SIZE_MB=50
MAX_AUDIO_SIZE_MB=200
MAX_VIDEO_SIZE_MB=500

# ===== Database Configuration =====
DB_HOSTNAME=localhost
DB_PORT=5432
DB_DATABASE=filecraft
DB_USER=postgres
DB_PASSWORD=password
# DATABASE_URL=postgresql://postgres:password@localhost:5432/filecraft

# ===== Redis Configuration =====
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=
REDIS_SSL=false

# ===== Celery Configuration =====
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=1800
CELERY_TASK_SOFT_TIME_LIMIT=1500

# Legacy Celery settings (for backward compatibility)
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_POOL=threads

# ===== Processing Configuration =====
ENABLE_ASYNC_PROCESSING=true
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT=300

# Image processing
IMAGE_QUALITY_DEFAULT=85
MAX_IMAGE_PIXELS=178956970
IMAGE_MEMORY_LIMIT=268435456

# Audio processing
AUDIO_BITRATE_DEFAULT=128
AUDIO_SAMPLE_RATE_DEFAULT=44100

# Video processing
VIDEO_BITRATE_DEFAULT=1M
VIDEO_FPS_DEFAULT=30
VIDEO_RESOLUTION_DEFAULT=1280x720

# ===== Monitoring & Logging =====
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_ENDPOINT=/health

# Logging configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# ===== Feature Flags =====
ENABLE_ADMIN_PANEL=false
ENABLE_WEBHOOKS=false
ENABLE_BATCH_PROCESSING=true
ENABLE_REAL_TIME_PROCESSING=true

# ===== External Services =====
# AWS S3 Configuration (Optional)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
# S3_BUCKET_NAME=your_bucket_name
ENABLE_S3_STORAGE=false

# Email Configuration (Optional)
# SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
SMTP_TLS=true
# EMAIL_FROM=noreply@filecraft.com
ENABLE_EMAIL_NOTIFICATIONS=false

# ===== Cache Configuration =====
CACHE_TTL=3600
ENABLE_RESPONSE_CACHE=true
CACHE_MAX_SIZE=1000

# ===== Environment Configuration =====
ENVIRONMENT=development
# SENTRY_DSN=your_sentry_dsn_url
ENABLE_PROFILING=false

# ===== API Documentation Configuration =====
CONTACT_NAME=FileCraft Support
CONTACT_EMAIL=support@filecraft.com
CONTACT_URL=https://filecraft.com/support
LICENSE_NAME=MIT License
LICENSE_URL=https://opensource.org/licenses/MIT
TERMS_OF_SERVICE=https://filecraft.com/terms

# ===== Production Notes =====
# 1. Change all secret keys and passwords in production
# 2. Use specific CORS origins instead of "*"
# 3. Set ALLOWED_HOSTS to your domain names
# 4. Enable HTTPS and security headers
# 5. Use environment-specific database credentials
# 6. Configure proper logging and monitoring